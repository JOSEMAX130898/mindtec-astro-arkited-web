---
import { fetchCycles } from '../../services/api.js';

interface Ciclo {
  id: string;
  link: string;
  name: string;
  imageUrl: string;
}


const ciclosData: Ciclo[] = await fetchCycles() || [];
---

<section class="w-full px-4 py-12 md:px-12">
  <div class="mx-auto max-w-7xl">
    <div class="grid grid-cols-1 gap-10 md:grid-cols-3">
      {ciclosData && ciclosData.map((ciclo: Ciclo) => (
        <div class="flex flex-col items-center gap-10">
          <div class="mb-4 text-center">
       
            <h3 class="text-2xl font-bold lg:text-6xl text-moradoArk font-bebas">
              {ciclo.name} 
            </h3>
          </div>
          
          <div class="relative">
            <div class="flex items-center justify-center w-full overflow-hidden lg:h-full">
              <img 
                src={ciclo.imageUrl} 
                alt={ciclo.name} 
                class="object-contain lg:w-full lg:h-full md:h-full h-[200px]" 
                draggable="false" 
              />
            </div>
          </div>
          
          <a 
            href={`/ciclos/${ciclo.name}`}
            class="w-2/4 flex items-center gap-2 px-6 py-1 !text-lg font-medium transition-opacity button-cortado-sm !bg-moradoArk hover:opacity-90 !text-verdeArk"
          >
            <span class="font-akira-bold">+</span>
            <span class="font-akira-bold">Info</span>
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

---
import sedesRectangle from '../../../public/sedesRectangle.png';
import { fetchLocations } from '../../services/api.js';

interface Location {
  _id: string;
  name?: string;
  address?: string;
  schedule?: string;
  phone?: string;
  map_url?: string;
  contact_url?: string;
  image_url?: string;
  status?: number;
}

// Obtener datos de ubicaciones desde la API
const locationsData: Location[] = await fetchLocations() || [];

console.log('=== DEBUG SEDES ===');
console.log('Datos de ubicaciones:', locationsData);
console.log('Cantidad de ubicaciones:', locationsData.length);

// Mapear los datos de la API a la estructura que necesita el componente
const sedes = locationsData.map(location => ({
  nombre: location.name || 'Sede sin nombre',
  direccion: location.address || 'Dirección no disponible',
  horario: location.schedule || 'Horario no disponible',
  telefono: location.phone || 'Teléfono no disponible',
  mapaUrl: location.map_url || '#',
  whatsappUrl: location.contact_url || '#',
  imagen: location.image_url || sedesRectangle.src
}));

console.log('Sedes mapeadas:', sedes);
console.log('Cantidad de sedes mapeadas:', sedes.length);

// Verificar si hay sedes antes de renderizar
const haySedes = sedes.length > 0;
console.log('¿Hay sedes válidas?', haySedes);
---

<div class="w-full py-16 bg-white">
  <div class="container px-10 mx-auto lg:px-4">
    {haySedes ? (
      <div
  class={`flex flex-wrap justify-center gap-6 lg:gap-14 mx-auto max-w-6xl flex-row`}
>
        {sedes.map((sede, index) => (
          <div class="flex-1 max-w-sm basis-[300px]">
            <!-- Imagen del edificio -->
            <div class="w-full max-w-sm mb-6">
              <img 
                src={sede.imagen} 
                alt={`Edificio de ${sede.nombre}`} 
                class="w-full h-auto"
              />
            </div>

          <!-- Información de la sede -->
          <div class="w-full mb-6 space-y-2 text-left lg:w-full">
            <h3 class="text-lg font-semibold text-black">{sede.nombre}</h3>
            <p class="text-sm text-gray-700">{sede.direccion}</p>
            <div class="space-y-1">
              <p class="text-sm font-medium text-gray-800">Horario de atención</p>
              <p class="text-sm text-gray-700">{sede.horario}</p>
            </div>
            <p class="text-sm text-gray-700">{sede.telefono}</p>
          </div>

          <!-- Botones de acción -->
          <div class="flex flex-col w-2/4 gap-5 lg:w-full lg:flex-row">
            <!-- Botón VER MAPA -->
            <a 
              href={sede.mapaUrl}
              target="_blank"
              class="lg:w-2/5 relative flex-1 px-4 py-2 overflow-hidden text-sm font-medium !text-verdeArk transition-colors !bg-moradoArk button-cortado-sm font-akira-bold group hover:bg-green-800"
            >
              <span class="relative z-10 text-xs">VER MAPA</span>
              <!-- Esquina cortada -->
              <div class="absolute top-0 right-0 w-0 h-0 border-t-8 border-l-8 border-l-green-700 border-t-transparent group-hover:border-l-green-800"></div>
            </a>

            <!-- Botón Escríbenos -->
            <a 
              href={sede.whatsappUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="lg:w-full lg:pl-3 relative flex items-center justify-center flex-1 py-2 space-x-2 overflow-hidden text-sm font-medium !text-white transition-colors bg-green-500 button-cortado-sm font-akira-bold group hover:bg-green-600"
            >
              <!-- Icono de WhatsApp -->
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
              </svg>
              <span class="relative z-10 !text-white text-xs">Escribenos</span>
              <!-- Esquina cortada -->
              <div class="absolute top-0 right-0 w-0 h-0 text-base border-t-8 border-l-8 border-l-green-500 border-t-transparent group-hover:border-l-green-600"></div>
            </a>
          </div>
          </div>
        ))}
      </div>
    ) : (
      <div class="flex flex-col items-center justify-center py-20">
        <h3 class="mb-4 text-xl font-semibold text-gray-600">No hay sedes disponibles</h3>
        <p class="text-gray-500">Próximamente tendremos más información sobre nuestras sedes.</p>
      </div>
    )}
  </div>
</div>
